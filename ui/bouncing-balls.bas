10 REM *** BOUNCING BALLS ***
20 REM EXTENDED COLOR BASIC
30 PMODE 4,1
40 PCLS
50 SCREEN 1,1
60 X1=50:Y1=50:U1=4:V1=3
70 X2=200:Y2=100:U2=-3:V2=4
80 X3=128:Y3=30:U3=2:V3=1
90 FOR F=1 TO 400
100 PCLS
110 LINE(0,0)-(255,191),1,B
120 CIRCLE(X1,Y1),15,1
130 CIRCLE(X1,Y1),10,1
140 CIRCLE(X2,Y2),12,1
150 CIRCLE(X3,Y3),8,1
160 X1=X1+U1:Y1=Y1+V1
170 X2=X2+U2:Y2=Y2+V2
180 X3=X3+U3:Y3=Y3+V3
190 IF X1<15 OR X1>240 THEN U1=-U1
200 IF Y1<15 OR Y1>176 THEN V1=-V1
210 IF X2<12 OR X2>243 THEN U2=-U2
220 IF Y2<12 OR Y2>179 THEN V2=-V2
230 IF X3<8 OR X3>247 THEN U3=-U3
240 IF Y3<8 OR Y3>183 THEN V3=-V3
250 V3=V3+0.3
260 IF V3>6 THEN V3=6
270 IF V3<-6 THEN V3=-6
280 NEXT F
290 SCREEN 0,0
300 CLS
310 PRINT "DONE!"
320 END
